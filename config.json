{
  "app": {
    "name": "Straye Relation API",
    "environment": "development",
    "port": 8080
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "relation",
    "user": "relation_user",
    "password": "relation_password",
    "sslMode": "disable",
    "maxOpenConns": 25,
    "maxIdleConns": 5,
    "connMaxLifetime": 300
  },
  "azureAd": {
    "instanceUrl": "https://login.microsoftonline.com/",
    "requiredScopes": "access_as_user"
  },
  "apiKey": {
    "secretName": "admin-api-key",
    "value": "dev-admin-key-change-in-production"
  },
  "storage": {
    "mode": "local",
    "localBasePath": "./storage",
    "cloudConnectionString": "",
    "cloudContainer": "files",
    "maxUploadSizeMB": 50
  },
  "secrets": {
    "keyVaultName": ""
  },
  "logging": {
    "level": "info",
    "format": "console"
  },
  "server": {
    "readTimeout": 30,
    "writeTimeout": 30,
    "requestTimeout": 60,
    "enableSwagger": true
  },
  "security": {
    "contentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' https: data:;"
  }
}
